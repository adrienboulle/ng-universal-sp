{
  "angularCompilerOptions": {
    "annotationsAs": "static fields",
    "annotateForClosureCompiler": true
  },
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "outDir": "built/src",
    "declaration": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "src",
    "dist"
  ]
}
